<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#707070">
        
        <ImageView
            android:id="@+id/viewPrioirity"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_dot"
            android:layout_gravity="right"
            android:layout_margin="8dp"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:fontFamily="@font/comic_neue_bold"
                android:layout_marginRight="30dp"
                />
            <TextView
                android:id="@+id/notesDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titapinfalnfalkfnaolkfndklfnlskdfnsdlfnsdlkfnsdlkfnsdljfnsdljfnsdkjfnsdkjfnsdkjfnsdkjfnskjfnsdkjfnsdkjfnsdkjfnsdkjfnsdkfjnle"
                android:textColor="#D8D8D8"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/comic_neue_bold"
                />
            <TextView
                android:id="@+id/notesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="23 march 2021"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/comic_neue_bold"

                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>